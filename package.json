{
  "name": "red-cloud",
  "version": "1.0.0",
  "description": "Better-Cloud rebuilt using RedwoodSDK and Alchemy IaC",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "clean": "rm -rf ./node_modules/.vite && rm -rf .wrangler",
    "dev": "bun --env-file=.env.dev vite dev",
    "dev:init": "bun db:touch && bun db:generate && bun db:migrate",
    "check": "biome check --write src --verbose",
    "check:unsafe": "biome check --write src --unsafe --verbose",
    "infra:destroy": "bun --env-file=.env.prod alchemy.run.ts destroy",
    "infra:up": "bun --env-file=.env.prod alchemy.run.ts up",
    "preview": "bun build && bun vite preview",
    "typecheck": "tsc --noEmit",
    "db:touch": "wrangler d1 execute DB --local --command='SELECT 1'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply DB --local",
    "db:migrate:prod": "wrangler d1 migrations apply DB --remote",
    "db:studio": "drizzle-kit studio --config drizzle.config.ts",
    "db:studio:prod": "NODE_ENV=production drizzle-kit studio"
  },
  "dependencies": {
    "@biomejs/biome": "^1.9.4",
    "@libsql/client": "^0.15.9",
    "@tailwindcss/vite": "^4.1.10",
    "better-auth": "^1.2.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.2",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.515.0",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.2",
    "resend": "^4.6.0",
    "rwsdk": "0.0.88",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.10",
    "ua-parser-js": "^2.0.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250614.0",
    "@types/node": "^24.0.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "alchemy": "^0.28.0",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "prettier": "^3.5.3",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "wrangler": "^4.20.0"
  },
  "packageManager": "bun@1.2.15",
  "trustedDependencies": [
    "@biomejs/biome",
    "@swc/core",
    "@tailwindcss/oxide"
  ]
}
