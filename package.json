{
	"name": "red-cloud",
	"version": "1.0.0",
	"description": "Better-Cloud rebuilt using RedwoodSDK and Alchemy IaC",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "vite build",
		"clean": "rm -rf ./node_modules/.vite && rm -rf .wrangler",
		"dev": "NODE_ENV=development vite dev",
		"dev:init": "bun db:touch && bun db:generate && bun db:migrate",
		"check": "biome check --write src --verbose",
		"check:unsafe": "biome check --write src --unsafe --verbose",
		"infra:destroy": "bun alchemy.run.ts destroy",
		"infra:up": "bun alchemy.run.ts up",
		"preview": "bun build && bun vite preview",
		"typecheck": "tsc --noEmit",
		"db:touch": "wrangler d1 execute DB --local --command='SELECT 1'",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "wrangler d1 migrations apply DB --local",
		"db:migrate:prod": "wrangler d1 migrations apply DB --remote",
		"db:studio": "drizzle-kit studio --config drizzle.config.ts",
		"db:studio:prod": "NODE_ENV=production drizzle-kit studio"
	},
	"dependencies": {
		"@biomejs/biome": "^1.9.4",
		"@libsql/client": "^0.15.8",
		"@radix-ui/react-avatar": "^1.1.10",
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-dropdown-menu": "^2.1.15",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-select": "^2.2.5",
		"@radix-ui/react-slot": "^1.2.3",
		"@tailwindcss/vite": "^4.1.8",
		"better-auth": "^1.2.8",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.43.1",
		"input-otp": "^1.4.2",
		"lucide-react": "^0.513.0",
		"next-themes": "^0.4.6",
		"resend": "^4.5.2",
		"rwsdk": "^0.0.88",
		"sonner": "^2.0.5",
		"tailwind-merge": "^3.3.0",
		"tailwindcss": "^4.1.8"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250607.0",
		"@types/node": "^22.15.30",
		"@types/react": "^19.1.6",
		"@types/react-dom": "^19.1.6",
		"alchemy": "^0.24.1",
		"dotenv": "^16.5.0",
		"drizzle-kit": "^0.31.1",
		"prettier": "^3.5.3",
		"tw-animate-css": "^1.3.4",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"wrangler": "^4.19.1"
	},
	"packageManager": "bun@1.2.15",
	"trustedDependencies": ["@biomejs/biome", "@swc/core", "@tailwindcss/oxide"]
}
